# =================================
# Gossiptoon V2 - Backend Configuration
# =================================
# Copy this file to .env and update with your actual values

# ---------------------------------
# Server Configuration
# ---------------------------------
HOST=0.0.0.0
PORT=8000
DEBUG=False

# ---------------------------------
# CORS Configuration
# ---------------------------------
FRONTEND_URL=http://localhost:3000

# ---------------------------------
# Reddit API Credentials (REQUIRED)
# ---------------------------------
# Get these from: https://www.reddit.com/prefs/apps
# 1. Click "create another app..."
# 2. Choose "script" type
# 3. Set redirect uri to: http://localhost:8000
# 4. Copy the client ID (under "personal use script") and secret

REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=viral-story-search/1.0

# ---------------------------------
# Google Gemini Configuration (REQUIRED)
# ---------------------------------
# Get your API key from: https://makersuite.google.com/app/apikey
# 1. Go to Google AI Studio
# 2. Click "Create API Key"
# 3. Copy the API key

GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.5-flash
MODEL_IMAGE_GEN=gemini-2.5-flash-image
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2000

# ---------------------------------
# Cache Configuration
# ---------------------------------
CACHE_TTL=300
CACHE_MAX_SIZE=100

# ---------------------------------
# Persistence Configuration
# ---------------------------------
DATA_DIR=data

# ---------------------------------
# Story Generation Configuration
# ---------------------------------
STORY_EVALUATION_THRESHOLD=7.0
STORY_MAX_REWRITES=1

# ---------------------------------
# Webtoon Script Configuration
# ---------------------------------
WEBTOON_EVALUATION_THRESHOLD=7.0
WEBTOON_MAX_REWRITES=2
WEBTOON_MIN_SCENES=8
WEBTOON_DIALOGUE_COVERAGE=0.6
